{
    "name": "psfs/core",
    "description": "Php Simple Fast & Secure",
    "keywords": ["php", "framework", "mvc", "api", "RESTful", "twig"],
    "homepage": "https://github.com/psfs/core",
    "require": {
        "php" : "^5.6 || ^7.0",
        "ext-gettext": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "propel/propel": "2.0.x-dev",
        "symfony/console": "3.4.x-dev",
        "symfony/finder": "3.4.x-dev",
        "twig/twig": "1.x-dev",
        "twig/extensions": "1.5.x-dev",
        "monolog/monolog": "1.x-dev",
        "matthiasmullie/minify": "1.3.*",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.x"
    },
    "config" : {
        "optimize-autoloader": true,
        "discard-changes": true
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Fran LÃ³pez",
            "email": "fran.lopez84@hotmail.es"
        }
    ],
    "support": {
        "email": "fran.lopez84@hotmail.es",
        "wiki": "https://github.com/psfs/core/wiki",
        "issues": "https://github.com/psfs/core/issues"
    },
    "autoload": {
        "psr-4": {
            "PSFS\\": "src/"
        },
        "exclude-from-classmap": ["/Tests/", "/test/", "/tests/"]
    },
    "bin": [
        "src/bin/psfs"
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "post-update-cmd": "\\PSFS\\command\\base\\CreateRootCommand::execute",
        "post-install-cmd": "\\PSFS\\command\\base\\CreateRootCommand::execute",
        "post-require-cmd": "\\PSFS\\command\\base\\CreateRootCommand::execute"
    }
}
