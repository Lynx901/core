{
    "name": "psfs/core",
    "description": "Php Simple Fast & Secure",
    "keywords": ["php", "framework", "mvc", "api", "RESTful", "twig"],
    "homepage": "https://github.com/psfs/core",
    "require": {
        "php" : "^7.0",
        "ext-gettext": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "propel/propel": "2.0.x-dev",
        "symfony/console": "@stable",
        "symfony/finder": "@stable",
        "twig/twig": "@stable",
        "twig/extensions": "@stable",
        "monolog/monolog": "@stable",
        "matthiasmullie/minify": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "phpmd/phpmd": "@stable",
        "roave/security-advisories": "dev-master"
    },
    "config" : {
        "optimize-autoloader": true,
        "discard-changes": true,
        "apcu-autoloader": true,
        "platform": {
            "php": "7.2"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Fran LÃ³pez",
            "email": "fran.lopez84@hotmail.es"
        }
    ],
    "support": {
        "email": "fran.lopez84@hotmail.es",
        "wiki": "https://github.com/psfs/core/wiki",
        "issues": "https://github.com/psfs/core/issues"
    },
    "autoload": {
        "psr-4": {
            "PSFS\\": "src/"
        },
        "exclude-from-classmap": ["/Tests/", "/test/", "/tests/"]
    },
    "bin": [
        "src/bin/psfs"
    ],
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
