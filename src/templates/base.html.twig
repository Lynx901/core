<!DOCTYPE html>
<html lang="{{ get_config('default_language')|default('es') }}" ng-app="{{ app_name|default('') }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="NOINDEX,NOFOLLOW">
        {% styles
            '@ROOT/css/bootstrap.min.css'
            '@ROOT/css/bootstrap-theme.min.css'
            '@ROOT/css/font-awesome.min.css'
            '@ROOT/css/timeline.css'
            '@ROOT/css/shadowbox.css'
        %}{% endstyles %}
{% block head %}
    {% block seo %}
        <title>{% block doc_title %}{{ get_config('platform_name') }}{% endblock doc_title %}</title>
        <meta name="description" content="Php Simple Fast & Secure">
    {% endblock seo %}
{% endblock head %}
    {{ asset('@ROOT/js/jquery-1.11.1.min.map', '/js/jquery-1.11.1.min.map', false) }}
    {{ asset('@ROOT/js/angular.min.js.map', '/js/angular.min.js.map', false) }}
    </head>
    <body>
        {% block menu %}
        {% include 'top.menu.html.twig' %}
        {% endblock menu %}
        <header role="banner">{% block header %}{% endblock header %}</header>
        <section>
        {% block body %}
            <article class="container">
                {% block body_header %}
                {% endblock body_header %}
                {% block body_content %}
                {% endblock body_content %}
                {% block body_footer %}
                {% endblock body_footer %}
            </article>
        {% endblock body %}
        </section>
        <footer role="contentinfo">{% block footer %}{% endblock footer %}</footer>
        <a id="back-to-top" href="#" class="btn btn-default back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>
        {% scripts
        "@ROOT/js/jquery.min.js"
        "@ROOT/js/bootstrap.min.js"
        "@ROOT/js/angular.js"
        "@ROOT/js/jquery-ui.min.js"
        "@ROOT/js/jquery.autocomplete.js"
        "@ROOT/js/timeline.js"
        "@ROOT/js/shadowbox.js"
        "@ROOT/js/bootstrap.slider.js"
        "@ROOT/js/bootbox.js"
        "@ROOT/js/admins.js"
        %}{% endscript %}
    {% block scripts %}
    {% endblock scripts %}
    {% include 'debug.html.twig' %}
    </body>
</html>