{% extends 'base.html.twig' %}
{% block body_header %}
    <div class="page-header">
        <h1>{{ "Logs de la plataforma"|trans }} <br><small>{{ get_config('platform_name') }}</small></h1>
    </div>
{% endblock body_header %}
{% block body_content %}
    <div class="col-md-4">
        <form name="logs" id="logs" action="{{ path('admin-logs') }}" method="post">
            <ul class="list-group">
            {% for logfile in logs %}
                <li class="list-group-item">
                    <label>
                        <input type="radio" name="log" value="{{ logfile.filename }}" onclick="javascript:$('#logs').submit();" {% if selected == logfile.filename %}checked{% endif %}>
                        {{ logfile.filename }}<span class="label label-default">{{ logfile.size }} Kb</span>
                    </label>
                </li>
            {% endfor %}
            </ul>
        </form>
    </div>
    <pre class="well col-md-8">{{ log }}</pre>
{% endblock body_content %}