<form id="{{ form.name }}"
      name="{{ form.name }}"
      enctype="{{ form.enctype }}"
      action="{{ form.action }}"
      method="{{ form.method }}"
      role="form"
{% if form.attrs %}
    {% for name, attr in form.attrs %}
      {{ name }}="{{ attr }}"
    {% endfor %}
{% endif %}>
    <fieldset>
    {% if form.title %}
        <legend class="media">
            {% if form.logo %}
            <div class="media-left media-middle">
                <img src="{{ form.logo }}" alt="{{ form.title }}" id="{{ form.name }}_img"/>
            </div>
            {% endif %}
            <div class="media-body">
                <h3 class="media-heading">{{ form.title | raw }}</h3>
            </div>
        </legend>
    {% endif %}
    {% for name, field in form.fields %}
    {% if name == '__SEPARATOR__' %}
        <hr class="col-md-12">
    {% else %}
        {{ form_widget(field) }}
    {% endif %}
    {% endfor %}
    </fieldset>
    <div class="form-group form-actions">
    {% for button in form.buttons %}
        {{ form_button(button) }}
    {% endfor %}
    </div>
</form>