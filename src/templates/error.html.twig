{% extends 'base.html.twig' %}
{% block body_header %}
    <div class="page-header">
        <h1>{{ "Opps, esto no era lo que me esperaba..."|trans }}</h1>
        <h2>{{ get_config('platform_name') }}</h2>
    </div>
{% endblock body_header %}
{% block body_content %}
    <p><strong>{{ exception.getCode }}</strong> {{ exception.getMessage }}</p>
    {% if __DEBUG__ %}
    <ul>
        {% for trace in __DEBUG__.trace %}
        <li>{{ trace.class }}<em>{{ trace.type }}</em>{{ trace.function }}() <span class="label label-danger">{{ trace.file }} [{{ trace.line }}]</span></li>
        {% endfor %}
    </ul>
    {% endif %}
{% endblock body_content %}
{% block scripts %}
{% endblock scripts %}
