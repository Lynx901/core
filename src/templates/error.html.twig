{% set base_version = get_config('admin.version', 'v1') %}
{% extends base_version ~ '/base.html.twig' %}
{% block body_header %}
    <md-subheader class="page-header md-primary">
        <h2>{{ "Opps, esto no era lo que me esperaba..."|trans }}</h2>
        <h1>{{ get_config('platform_name') }}</h1>
    </md-subheader>
{% endblock body_header %}
{% block body_content %}
    <md-card>
        <md-card-title>
            <md-card-title-text>
                <p><strong>{{ exception.getCode }}</strong> {{ exception.getMessage }}</p>
            </md-card-title-text>
        </md-card-title>
        <md-card-content>
        {% if __DEBUG__ %}
            <pre>{{ trace }}</pre>
        {% endif %}
        </md-card-content>
    </md-card>
{% endblock body_content %}
{% block scripts %}
{% endblock scripts %}
