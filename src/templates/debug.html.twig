{% spaceless %}
    {% if __DEBUG__ is defined %}
        <script type="text/javascript">
            var _debug = {
                includes: [],
                trace: []
            };
            {% for include in __DEBUG__.includes %}
            _debug.includes.push('{{ include }}');
            {% endfor %}
            {% for index, trace in __DEBUG__.trace %}
            var trace_{{ index }} = {};
            {% for key, value in trace %}
            trace_{{ index }}['{{key}}'] = '{{ value }}';
            {% endfor %}
            _debug.trace.push(trace_{{ index }});
            {% endfor %}
        </script>
    {% endif %}
{% endspaceless %}
